import java.util.ArrayList;
import java.util.Scanner;

public class medicine
{
    static ArrayList<String> medicine = new ArrayList<String>();
    Scanner in = new Scanner(System.in);
    String prescribe;
    
    public medicine()
    {
        
    }
    /** adds user input to medicine arraylist
      * @throws IllegalArgumentException if input length is less than zero
       */
    
    public void medicine()
    {
        for (int i = 0; i < patients.patientList.size();i++)
        {
            System.out.print("What medication does " + patients.patientList.get(i) + " " + "take? ");
            medicine.add(in.nextLine());
            if (medicine.get(i).length() <= 0)
            {
                throw new IllegalArgumentException ("Illegal medicine: " + medicine);
            }
            
        }
    }
}
