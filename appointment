
import java.util.ArrayList;
import java.util.Scanner;

public class appointment
{
    protected static ArrayList<String>appointment  = new ArrayList<String>();
    Scanner in = new Scanner(System.in);
    String lookUp;
    
    public appointment()
    {
        
    }
    /**
      * adds user input to appointment arraylist
      *@ throws IllegalArgumentException if input length is less than or equal to 0.
        */
    public void appointment()
    {
        for (int i = 0; i < patients.patientList.size();i++)
        {
            System.out.print("When is " + patients.patientList.get(i) + "'s " + "next appointment? ");
            appointment.add(in.nextLine()); 
            if (appointment.get(i).length() <= 0)
            {
                throw new IllegalArgumentException("Illegal appointment: " + appointment);
            }
            
        }
    }
    
}
