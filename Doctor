import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class Doctor 
{   
    private String userName1,password1;
	private Scanner in;
	FileWriter myWriter;
    BufferedReader myReader;
    public Doctor()
    {
        
    }
    
    public void login()
    {
    	try
    	{
    		myWriter = new FileWriter("UserInfo.txt",true);
    		in = new Scanner(System.in);
    		System.out.print("Enter your Username " );
    		userName1 = in.next();
    		System.out.print("Enter your Password ");
    		password1 = in.next();
    		myWriter.write(userName1 + password1);
    		myWriter.close();
    	}
    	catch(IOException e)
    	{
    		System.err.println("Your input had an error in it!");
    	}
    	
    	try
    	{
    		myReader = new BufferedReader(new FileReader("UserInfo.txt"));
    		String loginInfo;
    		while((loginInfo = myReader.readLine())!=null)
    		{
    			System.out.println();
    			
    		}
    	}
    	catch (FileNotFoundException e)
    	{
    		System.err.println("No info available.");
    	}
    	catch (IOException e)
    	{
    		System.err.println("Something went wrong");
    	}
    		
    	}
    
    public String getUserName1()
    {
        return userName1;
    }
    
    public String getPassword1()
    {
        return password1;
    }

    
}
